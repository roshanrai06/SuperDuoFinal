<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nanodegree.udacity.roshanrai.alexandria.AddBookFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Cover & Titles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/fullBookCover"
                    android:contentDescription="@string/book_cover"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/cover_na_grey"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="0dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    >

                    <TextView
                        android:id="@+id/fullBookTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="5"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        />

                    <TextView
                        android:id="@+id/fullBookSubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="18sp"
                        android:maxLines="5"
                        android:ellipsize="end"
                        />

                </LinearLayout>
            </LinearLayout>

            <!-- Author & Category-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/authors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="top|start"
                    android:textSize="18sp"
                    android:maxLines="5"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="top|end"
                    android:textSize="16sp"
                    android:maxLines="5"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/fullBookDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                />

            <!-- ISBN -->
            <TextView
                android:id="@+id/ean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_margin"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </LinearLayout>
    </ScrollView>

    <!-- Delete button -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        >

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_button"
            android:drawableStart="@drawable/ic_action_discard"
            android:drawableLeft="@drawable/ic_action_discard"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            style="?android:attr/buttonBarButtonStyle"
            />

    </LinearLayout>
</LinearLayout>
